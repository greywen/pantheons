{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist/types",
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
    },
    "types": [
        "./src/index.d.ts"
    ],
    "exclude": [
        "dist",
        "test",
        "node_modules",
        "jest.setup.ts"
    ]
}